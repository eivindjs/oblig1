@model IEnumerable<WebApplication3.Models.Kommentar>

@{
    ViewBag.Title = "Kommentar";
}

<h2>Kommentarer</h2>

<p>
    @Html.ActionLink("Kommenter", "Create", new { id = ViewBag.innleggId })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Tittel")
        </th>
        <th>
            @Html.DisplayName("Kommentar tittel")
        </th>
        <th>
            @Html.DisplayName("Kommentar")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.innlegg.Innlegg_Tittel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Kommentar_Tittel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Kommentar_tekst)
        </td>
        <td>
            @Html.ActionLink("Endre", "Edit", new { id=item.Kom_id }) |
            @Html.ActionLink("Slett", "Delete", new { id=item.Kom_id }) |
            @Html.ActionLink("Tilbake til innleggene", "InnleggIndex" , "Innlegg" , new {id = item.innlegg.Blogg_Id}, null)
        </td>
    </tr>
}

</table>
